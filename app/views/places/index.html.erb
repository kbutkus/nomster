  </a>
</div>

<% @places.each do |place| %>


<% if place.photos.present? %>
  <div class="col-12">
    <blockquote>
      <% if place.photos.last.picture.present? %>
       <%= image_tag place.photos.last.picture.url %>
      <% end %>
      <%= place.photos.last.caption %>
      <small><%= place.photos.last.user.email %></small>
    </blockquote>
  </div>
  <% end %> 
</div>
<% end %>

<%= will_paginate @places %>

<div class="pagination">
  <%= form_tag(places_path, :method => "Get") do%>
    <%=label_tag(:per_page,'Items per page:') %>
    <%= text_field_tag(:per_page , params[:per_page]) %>
    <%= button_to(:submit, places_path) %>
 </div> 
<% end %>